<div class="container">
  <h1 class="mb-4">Dashboard: Business-Partner</h1>

  <!-- Section for Managing Job Postings -->
  <div class="section mt-4">
    <h2 class="mb-3">Job Postings</h2>
    <div class="row justify-content-center">
      <% @jobs.each do |job| %>
        <div class="col-12 col-md-4">
          <div class="card job-card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= job.title %></h5>
              <p class="card-text"><%= job.company_name %></p>
              <p class="card-text"><%= job.location %></p>
            </div>
            <div class="card-footer">
              <%= link_to "View Job", job_path(job), class: "btn btn-primary btn-lg btn-block" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to "Post New Job", new_job_path, class: "btn btn-success btn-lg btn-block mt-3" %>
  </div>

  <!-- Section for Viewing Job Applications -->
  <div class="section mt-4">
    <h2 class="mb-3">Job Applications</h2>
    <div class="row justify-content-center">
      <!-- Your job application cards here -->
    </div>
    <div class="text-center mt-3">
    </div>
  </div>
</div>
