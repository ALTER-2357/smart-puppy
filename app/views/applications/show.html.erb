<div class="container">
  <div class="card mb-3 mx-auto p-0 p-md-5" style="max-width: 800px;">
    <div class="card-body">
      <h5 class="card-title"><%= @application.user.first_name %> <%= @application.user.last_name %></h5>
      <p class="card-text"><strong>Email:</strong> <%= @application.user.email %></p>
      <p class="card-text"><strong>Status:</strong> <%= @application.status %></p>
      <p class="card-text"><strong>Applied:</strong> <%= time_ago_in_words(@application.created_at) %> ago</p>
      <p class="card-text"><strong>Cover Letter:</strong> <%= @application.cover_letter %></p>
      <p class="card-text"><strong>CV File:</strong> <%= link_to 'Download CV', rails_blob_path(@application.cv_file_cloudinary, disposition: "attachment") %></p>
      <%= link_to 'Back to Job', job_path(@application.job), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
