<div class="signin-container container">
    <div class="left-section">
        <%= image_tag "logoicon.png", alt: "Logo" %>
        <h1>Stay ahead of the pack with</h1>
        <h1><strong>Smart Puppy</strong></h1>
    </div>

    <div class="right-section">
        <div class="element">
            <h3>Become a part of the pack</h3>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                    <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }  %>
                    <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="form-actions">
                    <%= f.button :submit, "Log in", class: "sp-default-btn-dark" %>
                </div>
            <% end %>

            <!-- Sign up with social icons
              <div class="social-icons">
                <a href="#" class="social-icon"><i class="fab fa-facebook"></i>Sign up with</a>
                <a href="#" class="social-icon"><i class="fab fa-linkedin"></i>Sign up with</a>
                <a href="#" class="social-icon"><i class="fab fa-instagram"></i>Sign up with</a>
            </div> -->
        </div>

<div class="form-actions" style="margin-top: 20px;">
  <%= link_to raw("Not a user yet? Signed up now!"), new_user_registration_path, class: "sp-default-btn-dark custom-signup-btn", style: "text-decoration: none;" %>
</div>


    </div>
</div>

<script>
    // JavaScript function to handle selecting role buttons
    function chooseRole(role) {
        // Remove 'active' class from all buttons
        document.querySelectorAll('.role-button').forEach(button => {
            button.classList.remove('active');
        });

        // Add 'active' class to the clicked button
        document.getElementById(`${role}-btn`).classList.add('active');
    }
</script>
