<!-- app/views/jobs/edit.html.erb -->

<div class="edit-container">
  <h1 class= "edit-h1" >Edit Job</h1>

  <%= form_with(model: @job, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control form-textarea", rows: 5, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :company_name, class: "form-label" %>
      <%= form.text_field :company_name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :requirements, class: "form-label" %>
      <%= form.text_area :requirements, class: "form-control form-textarea", rows: 5, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :location, class: "form-label" %>
      <%= form.text_field :location, class: "form-control", required: true %>
    </div>

    <div class="form-group mt-3">
      <%= form.submit "Update Job", class: "btn update-btn-primary" %>
      <%= link_to 'Cancel', job_path(@job), class: "btn cancel-btn-secondary" %>
    </div>
  <% end %>
</div>
