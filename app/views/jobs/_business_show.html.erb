

<div class="show-business-banner" style="background-image: url('https://source.unsplash.com/featured/?job');">
  <h1 class="banner-text">Latest job opportunities and applications below</h1>
</div>


  <div class="show-business-container">
    <div class="row">

    </div>
    <div class="card mb-3 text-center mx-auto p-0 p-md-5 show-business-card">
      <div class="row g-0">
        <div class="col-md-12">
          <% if @job.photo.attached? %>
            <%= cl_image_tag @job.photo.key, height: 200, width: 300, crop: :fill, class: "show-business-img-fluid rounded-start" %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1502945015378-0e284ca1a5be?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="show-business-img-fluid rounded-start" alt="...">
          <% end %>
        </div>
        <div class="col-md-12">
          <div class="card-body">
            <h5 class="card-title"><strong>Job Title:</strong> Web</h5>
            <p class="card-text"><strong>Company:</strong> Marets</p>
            <p class="card-text"><strong>Location:</strong> Padova</p>
            <p class="card-text" style="text-align: justify;"><strong>Job Description:</strong> Web Developer</p>
            <p class="card-text" style="text-align: justify;"><strong>Requirements:</strong> Html</p>
            <div class="text-center"> <!-- Centered div -->
              <p class="card-text"><small class="text-muted">Posted: <%= time_ago_in_words(@job.updated_at) %></small></p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= link_to 'Back to Jobs', jobs_path, class: "btn btn-secondary mb-3" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Applications Section -->
  <div class="show-business-applications">
    <div class="container">
      <div class="card mb-3 text-center mx-auto p-3">
        <h3>Applications</h3>
        <% if @applications.any? %>
          <% @applications.each do |application| %>
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title"><%= application.user.first_name %> <%= application.user.last_name %></h5>
                <p class="card-text"><strong>Status:</strong> <%= application.status %></p>
                <p class="card-text"><strong>Applied:</strong> <%= time_ago_in_words(application.created_at) %> ago</p>
                <%= link_to 'View Application', job_application_path(application.job, application), class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>No applications yet.</p>
        <% end %>
      </div>
    </div>
  </div>
