<body>
  <!-- Banner Section -->
  <div class="show-page-banner" style="background-image: url('/assets/banner2.png');">
    <h1 class="banner-text">Business Job SHOW PAGE</h1>
    <h2 class="banner-subtitle">Hire New Staff</h2>
  </div>
  <!-- End of Banner Section -->

  <div class="container-fluid"> <!-- Updated to container-fluid for full width -->
    <!-- Job Details Card -->
    <div class="card mb-3 text-center mx-auto p-3" style="max-width: 90%;">
      <div class="row g-0">
        <div class="col-12 d-flex flex-wrap flex-md-nowrap align-items-center">
          <!-- Job Image -->
          <div class="col-md-4 d-flex align-items-center justify-content-center">
            <% if @job.photo.attached? %>
              <%= cl_image_tag @job.photo.key, height: 250, width: 250, crop: :fill, class: 'img-fluid rounded-start' %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1502945015378-0e284ca1a5be?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="img-fluid rounded-start" alt="...">
            <% end %>
          </div>
          <!-- Job Details -->
          <div class="card-body p-3 col-md-8">
            <h5 class="card-title"><strong>Job Title:</strong> <%= @job.title %></h5>
            <p class="card-text"><strong>Company:</strong> <%= @job.company_name %></p>
            <p class="card-text"><strong>Location:</strong> <%= @job.location %></p>
            <p class="card-text" style="text-align: justify;"><strong>Job Description:</strong> <%= @job.description %></p>
            <p class="card-text" style="text-align: justify;"><strong>Requirements:</strong> <%= @job.requirements %></p>
            <p class="card-text"><small class="text-muted">Posted: <%= time_ago_in_words(@job.updated_at) %></small></p>
          </div>
        </div>
      </div>
      <!-- Apply Button -->
      <div class="card-footer d-flex justify-content-center p-3">
        <% if @job.user == current_user %>
          <p>This job was posted by you.</p>
        <% else %>
          <p>You are logged in as a Business Partner. You cannot apply for this job.</p>
        <% end %>
      </div>
    </div>

    <!-- Applications on the Right -->
    <div class="card mb-3 text-center mx-auto p-3" style="max-width: 90%">
      <h3>Applications</h3>
      <% if @applications.any? %>
        <% @applications.each do |application| %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= application.user.first_name %> <%= application.user.last_name %></h5>
              <p class="card-text"><strong>Status:</strong> <%= application.status %></p>
              <p class="card-text"><strong>Applied:</strong> <%= time_ago_in_words(application.created_at) %> ago</p>
              <%= link_to 'View Application', job_application_path(application.job, application), class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p style="margin-top: 15%; text-align: center">No applications yet.</p>
      <% end %>

    </div>

      <div class="back-to-jobs-button text-center" style="width: 90%">
        <%= link_to 'Back to Jobs', jobs_path, class: "custom-btn" %>
      </div>


    <!-- Back to Jobs Button -->

  </div>
</body>
